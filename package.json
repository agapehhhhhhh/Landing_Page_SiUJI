{
  "name": "siuji-landing-page",
  "version": "1.0.0",
  "description": "SIUJI Landing Page with Payload CMS and Vue.js",
  "scripts": {
    "setup": "node setup.js",
    "setup:bash": "./setup.sh",
    "setup:windows": "setup.bat",
    "setup:cms": "cd landingpage-cms && npm install",
    "setup:frontend": "cd landingpage-frontend && npm install",
    "generate:secret": "node -e \"console.log('PAYLOAD_SECRET=' + require('crypto').randomBytes(16).toString('hex'))\"",
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:detached": "docker-compose -f docker-compose.dev.yml up -d --build",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "dev:clean": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans && docker system prune -f",
    "prod": "docker-compose up --build",
    "prod:detached": "docker-compose up -d --build",
    "prod:down": "docker-compose down",
    "seed": "cd landingpage-cms && npm run seed",
    "test": "npm run test:cms && npm run test:frontend",
    "test:cms": "cd landingpage-cms && npm test",
    "test:frontend": "cd landingpage-frontend && npm test",
    "health": "docker-compose ps",
    "logs:cms": "docker-compose logs -f backend",
    "logs:frontend": "docker-compose logs -f frontend",
    "logs:db": "docker-compose logs -f db"
  },
  "devDependencies": {
    "lottie-web": "^5.13.0"
  }
}
