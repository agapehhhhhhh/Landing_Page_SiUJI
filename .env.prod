# ===========================================
# SIUJI Landing Page - Production Environment Variables
# ===========================================
# Configure these values for production deployment

# Database Configuration
# ===========================================
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=siuji_production
DB_USER=siuji_prod_user
DB_PASSWORD=your_very_secure_production_password

# Payload CMS Configuration
# ===========================================
PAYLOAD_SECRET=your_production_32_character_secret_key
PAYLOAD_PUBLIC_SERVER_URL=https://api.yourdomain.com

# API Configuration
# ===========================================
API_URL=https://api.yourdomain.com/api
CMS_URL=https://api.yourdomain.com
MEDIA_URL=https://api.yourdomain.com/media

# Frontend Configuration
# ===========================================
FRONTEND_URL=https://yourdomain.com

# Application Settings
# ===========================================
APP_NAME=SiUJI
NODE_ENV=production

# CORS Settings
# ===========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Optional: Email Configuration
# ===========================================
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password
# FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME=SiUJI Platform
