# ===========================================
# SIUJI Backend - Environment Variables
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=siuji_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database URI (for Payload CMS)
DATABASE_URI=postgres://postgres:your_secure_password_here@postgres:5432/siuji_db

# Payload CMS Configuration
PAYLOAD_SECRET=your_32_character_secret_key_here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Security & CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3001
JWT_SECRET=your_jwt_secret_key_here

# File Upload & Media
MEDIA_URL=http://localhost:3000/media
MAX_FILE_SIZE=10485760

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@siuji.id
FROM_NAME=SIUJI Platform

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined